<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: WHITE;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.Controller">
   <children>
      <AnchorPane prefHeight="0.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, WHITE, LIGHTGRAY);" />
      <AnchorPane layoutY="35.0" prefHeight="565.0" prefWidth="150.0" style="-fx-background-color: #4D4D4D;">
         <children>
            <ColorPicker fx:id="colorPicker" layoutX="13.0" layoutY="18.0" onAction="#changeColor" style="-fx-border-radius: 20px; -fx-background-radius: 20px; -fx-background-color: LIGHTGRAY;" />
            <Label layoutX="13.0" text="Pick your color :" textFill="WHITE">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="35.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, GRAY,#4D4D4D); -fx-border-color: #4D4D4D;">
         <children>
            <Label layoutX="725.0" layoutY="10.0" text="PixoPaint" textFill="WHITE">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <Button layoutX="15.0" layoutY="5.0" mnemonicParsing="false" style="-fx-background-color: LIGHTGRAY;" text="Undo" />
            <Button layoutX="65.0" layoutY="5.0" mnemonicParsing="false" prefWidth="45.0" style="-fx-background-color: LIGHTGRAY;" text="Redo" />
            <MenuBar layoutX="150.0" layoutY="2.0" prefHeight="30.0" prefWidth="132.0" style="-fx-background-color: linear-gradient(to bottom, GRAY,#4D4D4D);">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
               <padding>
                  <Insets top="3.0" />
               </padding>
            </MenuBar>
         </children>
      </AnchorPane>
      <Canvas fx:id="canvas" height="565.0" layoutX="150.0" layoutY="35.0" width="650.0" />
   </children>
</AnchorPane>
